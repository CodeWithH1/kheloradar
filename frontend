    <script>
        // Tab functionality
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons and contents
                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
                
                // Add active class to clicked button and corresponding content
                button.classList.add('active');
                document.getElementById(button.dataset.tab).classList.add('active');
            });
        });

        // Contact modal functions
        function openContactModal() {
            document.getElementById('contactModal').style.display = 'block';
        }

        function closeContactModal() {
            document.getElementById('contactModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('contactModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        }

        // Progress tracker functionality
        function recordActivity() {
            const currentStreak = parseInt(document.getElementById('streakCount').textContent);
            const currentPoints = parseInt(document.getElementById('totalPoints').textContent);
            
            // Simulate activity recording
            const newPoints = currentPoints + 25; // Add 25 points for daily activity
            const newStreak = currentStreak + 1;
            
            document.getElementById('streakCount').textContent = newStreak;
            document.getElementById('totalPoints').textContent = newPoints;
            
            alert('Great job! Activity recorded. You earned 25 points and maintained your streak!');
        }

        // Form submissions
        document.getElementById('donationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const donationAmount = formData.get('donationAmount');
            const donorName = formData.get('donorName');
            
            // Simulate donation processing
            alert(`Thank you ${donorName}! Your donation of ₹${donationAmount} will help support underprivileged athletes. You will receive a confirmation email shortly.`);
            
            // Reset form
            this.reset();
        });

        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const contactName = formData.get('contactName');
            const callPurpose = formData.get('callPurpose');
            const preferredTime = formData.get('preferredTime');
            
            // Simulate call booking
            alert(`Thank you ${contactName}! Your call has been scheduled. Our team will contact you during ${preferredTime.replace('-', ' ')} regarding ${callPurpose.replace('-', ' ')}.`);
            
            // Close modal and reset form
            closeContactModal();
            this.reset();
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Competition registration buttons
        document.querySelectorAll('.btn').forEach(btn => {
            if (btn.textContent.includes('Register') || btn.textContent.includes('Apply')) {
                btn.addEventListener('click', function() {
                    const cardTitle = this.closest('.competition-card').querySelector('h3').textContent;
                    alert(`Registration process initiated for ${cardTitle}. You will be redirected to the official registration portal.`);
                });
            }
        });

        // Mentor connect buttons
        document.querySelectorAll('.mentor-card .btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const mentorName = this.closest('.mentor-card').querySelector('h3').textContent;
                alert(`Connection request sent to ${mentorName}. They will contact you within 24 hours.`);
            });
        });

        // Add some interactive animations
        document.querySelectorAll('.competition-card, .mentor-card, .stat-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.02)';
                this.style.transition = 'all 0.3s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Loading animation for the page
        window.addEventListener('load', function() {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.5s ease-in';
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });

        // Add notification system for upcoming events
        function checkUpcomingEvents() {
            const today = new Date();
            const eventDate = new Date('2024-03-15'); // Example upcoming event
            const daysDiff = Math.ceil((eventDate - today) / (1000 * 60 * 60 * 24));
            
            if (daysDiff <= 7 && daysDiff > 0) {
                setTimeout(() => {
                    alert(`Reminder: Inter-District Basketball Championship is in ${daysDiff} days! Don't forget to register.`);
                }, 2000);
            }
        }

        // Call notification check after page loads
        setTimeout(checkUpcomingEvents, 3000);
    </script>
</body>
</html>
